<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.questions.QuestionsActivity">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primaryBlue"
        android:elevation="5dp"
        android:padding="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/tv_questID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/25"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:15 min"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/greenAccent"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Submit"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/tanAccent"
            android:textColor="@color/blackStart"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/primaryBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        >
        <TextView
            android:id="@+id/qa_catName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GK"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/ques_list_grid_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_right_menu"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/primaryBlue"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageButton
            android:id="@+id/prev_ques_btn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_left"
            android:background="@color/greenBackground"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="24dp"
            />
        <Button
            android:id="@+id/clear_sel_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/button_border"
            android:text="Clear selection"
            android:paddingHorizontal="8dp"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/mark_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/button_border"
            android:text="Mark for review"
            android:textColor="@color/white"
            />
        <ImageButton
            android:id="@+id/next_ques_btn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right"
            android:background="@color/greenBackground"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questions_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/ll3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll4"
        >

    </androidx.recyclerview.widget.RecyclerView>
    <ImageView
        android:id="@+id/mark_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_marked_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll4"
        android:elevation="5dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>